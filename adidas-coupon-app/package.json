{
  "name": "adidas-coupon-manager",
  "version": "1.1.0",
  "description": "아디다스 쿠폰 발급 관리 프로그램",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "author": "Shoepalace",
  "license": "MIT",
  "dependencies": {
    "sql.js": "^1.10.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.shoepalace.adidas-coupon",
    "productName": "아디다스 쿠폰 관리자",
    "forceCodeSigning": false,
    "icon": "adidas.png",
    "win": {
      "signAndEditExecutable": false,
      "icon": "adidas.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "아디다스 쿠폰 관리자",
      "artifactName": "아디다스쿠폰발급프로그램_데이터.${ext}"
    },
    "files": [
      "**/*",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "scripts/",
        "to": "scripts/",
        "filter": ["**/*"]
      },
      {
        "from": "install_files/",
        "to": "install_files/",
        "filter": ["**/*"]
      },
      {
        "from": "install_web_crawler.bat",
        "to": "install_web_crawler.bat"
      }
    ]
  }
}
